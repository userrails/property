<div class="row">
  <div class="span9 offset2"><%= gmaps4rails(@json) %></div>
</div>

<br/>
<div class="row">
  <% if @properties.present? %>
    <% @properties.each do |property| %>
      <div class="span3">
        <div class="row">
          <div class="span3"><%= property.property_name %></div>
          <% property.images.each do |image| %>
            <%= image_tag(image.image, :height => '200px', :width => '200px;', :class=>"img-polaroid") %>
          <% end %>
          <div class="span3"><%= property.property_type %></div>
          <div class="span3">City: <%=property.city %></div>
          <div class="span3"><%= property.property_listing %><br/></div>
          <div class="span3">Sale Area: <%=property.saleable_area + "sq.ft" %></div>
          <div class="span3"><%= "Sale Price: Rs." + property.sale_price %></div>
          <div class="span3"><%="Status: " + property.property_status%></div>
          <div class="span3">
            <%= link_to 'Full Details', property_path(property), :class => "btn btn-small btn-primary" %> &nbsp; 
            <%= link_to "View Map", dashboard_path(property), :class => "btn btn-small btn-primary" %>
          </div>
        </div>
      </div>
    <%end%>
  <% end %>
</div>

<div class="pagination pagination-centered pagination-large">
  <%= will_paginate(@properties) %>
</div>
